@page
@model BancoAlimentar.AlimentaEstaIdeia.Web.Areas.RoleManagement.Pages.RolesModel

<h1>Role Manager</h1>
<form method="post" asp-page="AddRole" asp-page-handler="CreateNewRole">
    <div class="input-group">
        <input name="roleName" class="form-control w-25">
        <span class="input-group-btn">
            <button class="btn btn-info">Add New Role</button>
        </span>
    </div>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>